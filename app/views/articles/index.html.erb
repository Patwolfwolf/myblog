<%= image_tag("1s.jpg") %>    
<h1>Listing articles</h1>

<%= link_to 'My Blog', controller: 'articles' %>
<%= link_to 'New article', new_article_path %>
 
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
	<th>Show</th>
    <th>Edit</th>
	<th>Delete</th>


  </tr>
 
    
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><% if current_user %><%= link_to 'Edit', edit_article_path(article) %><% end %></td>
      <td><% if current_user %><%= link_to 'Destroy', article_path(article),
              method: :delete,
              data: { confirm: 'Are you sure?' } %><% end %></td>   
    </tr>
  <% end %>
</table>

<%= form_for :article, url: articles_path do |f| %>
  
<% end %>
 
<%= link_to 'Back', articles_path %>
